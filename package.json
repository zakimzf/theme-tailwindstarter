{
    "name": "ghost-tailwind-starter-theme",
    "description": "A starter theme for Ghost using Tailwind CSS",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Pine",
        "email": "janis@usepine.com",
        "url": "https://www.usepine.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/usepine/theme-tailwindstarter.git"
    },
    "bugs": "https://github.com/usepine/theme-tailwindstarter/issues",
    "contributors": "https://github.com/usepine/theme-tailwindstarter/graphs/contributors",
    "devDependencies": {
        "autoprefixer": "10.4.14",
        "cssnano": "5.1.15",
        "gscan": "3.5.4",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-sourcemaps": "2.6.5",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.0.2",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "4.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "@tailwindcss/forms": "^0.2.1",
        "@tailwindcss/typography": "^0.4.0",
        "gulp-postcss": "9",
        "postcss": "^8.2.6",
        "tailwindcss": "^2.0.3"
    }
}
